<%= bootstrap_devise_error_messages! %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h4><%= t('.sign_up', :default => "Sign up") %></h4>
  </div>
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {role: "form"}) do |f| %>
        <div class="form-group">
          <div class="col-md-6">
            <%= f.label :nom %>
            <%= f.text_field :nom, class: "form-control" %>
          </div>
          <div class="col-md-6 no-padding left-padding">
            <%= f.label :prenom %>
            <%= f.text_field :prenom, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-6">
            <%= f.label :username %>
            <%= f.text_field :username, class: "form-control" %>
          </div>
          <div class="col-md-6 no-padding left-padding">
            <%= f.label :email %>
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-6">
            <%= f.label :password %>
            <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it', :default => "leave blank if you don't want to change it") %>
              )</i><br/>
            <%= f.password_field :password, :autocomplete => "off", class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-6">
            <%= f.label :password_confirmation %><br/>
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
        </div>
        <%= f.button t('.update', :default => "Sign up"), class: "btn btn-success btn-lg ", data: {disable_with: "<i class='fa fa-spinner fa-pulse'></i>"} %>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>
